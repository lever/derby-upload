@import "../base";

h1 {
  background: #999;
  color: #fff;
  padding: 20px 0 40px 20px;
  border-radius: 4px;
}

h2.files {
  background: url(unquote('data:image/png;base64,')) no-repeat 1px center;
  padding-left: 15px;
}

div[data-uploadurl] {
  text-align: center;
  height: 80px;
  border: 1px dashed
  font-family: Helvetica;
  size: 40px;
  h2 {
    line-height: 80px;
    margin: auto;
  }
  border-radius: 4px;
  margin: 10px 0;
}

div[data-uploadurl].hover {
  color: #fff;
  border-color: #f000;
  border-style: solid;
  background-color: #222;
}
